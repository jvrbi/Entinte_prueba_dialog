                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/PersonaAsignada_entinte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:textSize="15dp"
                        tools:text="Geovannie" />

                    <TextView
                        android:id="@+id/Etapa1_entinte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:textSize="15dp"
                        tools:text="Por verificar" />





                </LinearLayout>

                <TextView
                    android:id="@+id/FechaAsignacion_entinte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:textSize="15dp"
                    tools:text="11/10/2018" />

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>


